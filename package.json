backend:
  name: github
  repo: tufara18-png/eheh
  branch: main
  auth_type: token
  use_graphql: false
  base_url: ""
  commit_messages:
    create: "Create {{collection}} '{{slug}}'"
    update: "Update {{collection}} '{{slug}}'"
    delete: "Delete {{collection}} '{{slug}}'"
    uploadMedia: "Upload media"
    deleteMedia: "Delete media"

# IMPORTANT :
# Laisse auth_token vide â€” Cloudflare Pages injecte GITHUB_TOKEN automatiquement
auth_token: ""

media_folder: "public/uploads"
public_folder: "/uploads"

publish_mode: editorial_workflow

collections:
  - name: "projects"
    label: "Projects"
    folder: "content/projects"
    create: true
    extension: "json"
    format: "json"
    slug: "{{slug}}"
    fields:
      - { label: "Title (EN)", name: "title_en", widget: "string" }
      - { label: "Title (FR)", name: "title_fr", widget: "string" }
      - { label: "Slug", name: "slug", widget: "string" }
      - { label: "Category (EN)", name: "category_en", widget: "string" }
      - { label: "Category (FR)", name: "category_fr", widget: "string" }
      - { label: "Year", name: "year", widget: "number" }
      - { label: "Short EN", name: "short_en", widget: "text" }
      - { label: "Short FR", name: "short_fr", widget: "text" }
      - { label: "Long EN", name: "long_en", widget: "text" }
      - { label: "Long FR", name: "long_fr", widget: "text" }
      - { label: "Thumbnail", name: "thumbnail", widget: "image" }
      - label: "Gallery"
        name: "gallery"
        widget: list
        field: { label: "Image", name: "image", widget: "image" }

  - name: "settings"
    label: "Site Settings"
    files:
      - file: "content/settings.json"
        label: "Global Settings"
        name: "settings"
        fields:
          - { label: "Vimeo URL", name: "vimeoUrl", widget: "string" }
          - { label: "Behind The Scenes Image", name: "btsImage", widget: "image" }
